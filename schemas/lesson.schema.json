{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "title",
    "cefr_hint",
    "objectives",
    "content_blocks",
    "practice_refs",
    "requires_grammar",
    "requires_vocab"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^lesson__[-a-z0-9]+$"
    },
    "type": {
      "const": "lesson"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "cefr_hint": {
      "type": ["string", "null"],
      "enum": ["A1", "A2", "B1", "B2", "C1", "C2", null]
    },
    "objectives": {
      "type": "array",
      "items": {"type": "string"}
    },
    "content_blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind"],
        "properties": {
          "kind": {"type": "string"}
        }
      }
    },
    "practice_refs": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "requires_grammar": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^lesson__[-a-z0-9]+$"
      },
      "uniqueItems": true
    },
    "requires_vocab": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^vocab__[-a-z0-9]+$"
      },
      "uniqueItems": true
    },
    "difficulty": {
      "type": "number",
      "minimum": 1,
      "maximum": 10
    }
  }
}
