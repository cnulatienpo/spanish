{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MixMethod Spanish Lesson",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "nickname",
    "level",
    "unit",
    "lesson_number",
    "tags",
    "steps",
    "source_files"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^mmspanish__grammar_[a-z0-9_-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "nickname": {
      "type": "string",
      "minLength": 1
    },
    "level": {
      "type": "string",
      "enum": ["A1", "A2", "B1", "B2", "C1", "C2", "UNSET"]
    },
    "unit": {
      "type": "integer",
      "minimum": 0
    },
    "lesson_number": {
      "type": "integer",
      "minimum": 0
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "phase": { "type": "string" },
          "line": { "type": "string" },
          "origin": { "type": "string" },
          "story": { "type": "string" },
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["phase"]
      }
    },
    "notes": {
      "type": "string"
    },
    "source_files": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true
    }
  }
}
